<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:App/etc/system_file.xsd">
    <system>
        <tab id="loyalty_settings" translate="label" sortOrder="100">
            <label>Loyalty Engage</label>
        </tab>
        <section id="loyalty" translate="label" type="text" sortOrder="110"
            showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Loyalty</label>
            <tab>loyalty_settings</tab>
            <resource>LoyaltyEngage_LoyaltyShop::config</resource>

            <group id="general" translate="label" type="text" sortOrder="10"
                showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Loyalty Cart Configuration</label>

                <field id="module_enable" translate="label" type="select" sortOrder="5"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Loyalty Engage Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Set to 'Yes' to enable the Loyalty Engage module functionality.</comment>
                </field>

                <field id="loyalty_api_url" translate="label" type="text" sortOrder="10"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Loyalty Api Url</label>
                    <validate>required-entry validate-url</validate>
                    <comment>Please ensure the URL starts with "https://".</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="tenant_id" translate="label" type="obscure" sortOrder="20"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Client Id</label>
                    <validate>required-entry</validate>
                    <backend_model>LoyaltyEngage\LoyaltyShop\Model\Config\Backend\PreserveValue</backend_model>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="bearer_token" translate="label" type="obscure" sortOrder="30"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Client Secret</label>
                    <validate>required-entry</validate>
                    <backend_model>LoyaltyEngage\LoyaltyShop\Model\Config\Backend\PreserveValue</backend_model>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="cart_expiry_time" translate="label" type="select" sortOrder="40"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Cart Expiry Time</label>
                    <source_model>LoyaltyEngage\LoyaltyShop\Model\Config\Source\CartExpiryOptions</source_model>
                    <comment>select dropdown value for cart expiry.</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="logger_enable" translate="label" type="select" sortOrder="50"
                    showInDefault="1"
                    showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Logger Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="debug_logging" translate="label" type="select" sortOrder="55"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Debug Logging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable detailed debug logging for troubleshooting loyalty product detection issues.</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="loyalty_order_place_retrieve" translate="label" type="text"
                    sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1"
                    canRestore="1">
                    <label>Loyalty Order Retrieve Limit</label>
                    <validate>validate-digits</validate>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                <field id="queue_processing_frequency" translate="label" type="select" sortOrder="80"
                    showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Queue Processing Frequency</label>
                    <source_model>LoyaltyEngage\LoyaltyShop\Model\Config\Source\QueueFrequency</source_model>
                    <comment>How often to process loyalty queue messages (reduces API calls). Default: Every 5 minutes.</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>
            </group>
            <group id="export" translate="label" type="text" sortOrder="15"
                showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Loyalty Export Settings</label>
            
                 <field id="return_event" translate="label" type="select" sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Return Export</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                 <field id="purchase_event" translate="label" type="select" sortOrder="20"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Purchase Export</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                 <field id="review_event" translate="label" type="select" sortOrder="30"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Review Export</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Export customer reviews to LoyaltyEngage when submitted.</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>
            </group>
            <group id="shipping" translate="label" type="text" sortOrder="20"
                showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Loyalty Tier Free Shipping</label>
            
                 <field id="free_shipping_enable" translate="label" type="select" sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Free Shipping for Loyalty Tiers</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Automatically apply free shipping for customers with qualifying loyalty tiers.</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                    </depends>
                </field>

                 <field id="free_shipping_tiers" translate="label" type="text" sortOrder="20"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Free Shipping Tiers</label>
                    <comment>Enter tier names separated by semicolons (e.g., Bronze;Silver;Gold). Case sensitive.</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                        <field id="loyalty/shipping/free_shipping_enable">1</field>
                    </depends>
                </field>

                 <field id="tier_cache_duration" translate="label" type="text" sortOrder="30"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Tier Cache Duration (seconds)</label>
                    <validate>validate-digits</validate>
                    <comment>How long to cache customer tier information. Default: 600 seconds (10 minutes).</comment>
                    <depends>
                        <field id="loyalty/general/module_enable">1</field>
                        <field id="loyalty/shipping/free_shipping_enable">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
